<UserControl x:Class="MSCS.Views.LocalLibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MSCS.ViewModels"
             Background="Transparent">
    <UserControl.Resources>
        <Style x:Key="LetterFilterItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource FgSubtle}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Chip"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Chip" Property="Background" Value="{DynamicResource SurfaceAlt}"/>
                                <Setter Property="Foreground" Value="{DynamicResource Fg}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Chip" Property="Background" Value="{DynamicResource Accent}"/>
                                <Setter Property="Foreground" Value="{DynamicResource AccentForeground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EmptyStatePanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Letter filter -->
        <Border Grid.Column="0"
                Style="{StaticResource SurfaceSectionStyle}"
                Padding="8"
                CornerRadius="14"
                Effect="{x:Null}"
                MinWidth="64">
            <ListBox ItemsSource="{Binding GroupFilters}"
                     SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                     ItemContainerStyle="{StaticResource LetterFilterItemStyle}"
                     Background="Transparent"
                     BorderThickness="0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </Border>

        <!-- Main content -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Style="{StaticResource SurfaceSectionStyle}"
                    Margin="0,0,0,16"
                    Padding="16"
                    Effect="{x:Null}">
                <DockPanel LastChildFill="True">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <Button Content="Open"
                                Command="{Binding OpenLibraryFolderCommand}"
                                IsEnabled="{Binding HasLibraryPath}"
                                MinWidth="104"
                                Margin="0,0,12,0"
                                Style="{StaticResource AccentButtonStyle}"/>
                        <Button Content="Refresh"
                                Command="{Binding RefreshCommand}"
                                MinWidth="120"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding LibraryPath, TargetNullValue=No library folder selected}"
                               Margin="16,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource FgMuted}"
                               FontSize="14"
                               TextTrimming="CharacterEllipsis"/>
                </DockPanel>
            </Border>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="0,0,0,16"
                        VerticalAlignment="Center">
                <TextBox Width="320"
                         Style="{StaticResource InputTextBoxStyle}"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Filter by title"/>
                <TextBlock Text="Filter results by letter on the left or type to search."
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"
                           FontSize="14"
                           Foreground="{DynamicResource FgSubtle}"/>
            </StackPanel>
            <Grid Grid.Row="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListView x:Name="LibraryList"
                              Grid.Row="0"
                              ItemsSource="{Binding MangaEntries}"
                              SelectedItem="{Binding SelectedManga, Mode=TwoWay}"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.Style>
                            <Style TargetType="ListView">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Style>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,0,0,14"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="ItemBorder"
                                                    Background="{DynamicResource Surface}"
                                                    BorderBrush="{DynamicResource SurfaceBorderSoft}"
                                                    BorderThickness="1"
                                                    CornerRadius="12">
                                                <Border Padding="16">
                                                    <ContentPresenter Margin="0"/>
                                                </Border>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource SurfaceAlt}"/>
                                                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource SurfaceBorder}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource SurfaceAlt}"/>
                                                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource Accent}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:LocalMangaEntryItemViewModel}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Title}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource Fg}"/>
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding Path}"
                                               Foreground="{DynamicResource FgMuted}"
                                               FontSize="14"
                                               Margin="0,6,0,0"
                                               TextTrimming="CharacterEllipsis"/>
                                    <Grid Grid.Row="2" Margin="0,12,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0"
                                                    Orientation="Horizontal">
                                            <TextBlock FontSize="14" Foreground="{DynamicResource FgSubtle}">
                                                <Run Text="Chapters: "/>
                                                <Run Text="{Binding ChapterCount, Mode=OneWay}" Foreground="{DynamicResource Fg}"/>
                                            </TextBlock>
                                            <TextBlock FontSize="14"
                                                       Foreground="{DynamicResource FgSubtle}"
                                                       Margin="20,0,0,0">
                                                <Run Text="Updated: "/>
                                                <Run Text="{Binding LastModifiedUtc, Mode=OneWay, StringFormat={}{0:yyyy-MM-dd}}" Foreground="{DynamicResource Fg}"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Command="{Binding ToggleBookmarkCommand}"
                                                ToolTip="{Binding BookmarkToolTip}"
                                                MinWidth="150"
                                                Margin="20,0,0,0"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource AccentButtonStyle}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding BookmarkIconGlyph}"
                                                           FontFamily="Segoe MDL2 Assets"
                                                           Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding BookmarkButtonText}"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel" BasedOn="{StaticResource EmptyStatePanelStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasLibraryPath}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="32"
                                   Foreground="{DynamicResource FgSubtle}"
                                   Opacity="0.6"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Configure your library folder in Settings to browse local manga."
                                   Margin="0,12,0,0"
                                   FontSize="14"
                                   Foreground="{DynamicResource FgMuted}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="360"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel" BasedOn="{StaticResource EmptyStatePanelStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding HasLibraryPath}" Value="True"/>
                                            <Condition Binding="{Binding IsLibraryEmpty}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="32"
                                   Foreground="{DynamicResource FgSubtle}"
                                   Opacity="0.6"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="No manga found in your local library yet."
                                   Margin="0,12,0,0"
                                   FontSize="14"
                                   Foreground="{DynamicResource FgMuted}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="320"/>
                    </StackPanel>

                    <Button Grid.Row="1"
                            Content="Load more manga"
                            Command="{Binding LoadMoreMangaCommand}"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Left">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasMoreResults}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.55"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Border Background="#CC0E141F"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Panel.ZIndex="1">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar Width="160"
                                     IsIndeterminate="True"
                                     Foreground="{DynamicResource Accent}"
                                     Margin="0,0,0,12"/>
                        <TextBlock Text="Loading library..."
                                   Foreground="{DynamicResource FgMuted}"
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>