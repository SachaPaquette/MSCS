<UserControl x:Class="MSCS.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MSCS.ViewModels"
             Background="Transparent">
    <UserControl.Resources>
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource Fg}"/>
        </Style>

        <Style x:Key="SectionContainerStyle" TargetType="Border" BasedOn="{StaticResource SurfaceSectionStyle}">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect" Value="{x:Null}"/>
        </Style>
        
        <Style x:Key="ExtensionLabelBorderStyle" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ExtensionLabel}" Value="">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ExtensionLabel}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate DataType="{x:Type vm:LocalMangaEntryItemViewModel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Background="{DynamicResource SurfaceElevated}"
                        Padding="8,4"
                        CornerRadius="6"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource ExtensionLabelBorderStyle}">
                    <TextBlock Text="{Binding ExtensionLabel}" FontWeight="SemiBold" Foreground="{DynamicResource Fg}"/>
                </Border>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Title}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Fg}"/>
                    <TextBlock Text="{Binding Path}"
                               Foreground="{DynamicResource FgMuted}"
                               FontSize="12"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="BookmarkItemTemplate" DataType="{x:Type vm:BookmarkItemViewModel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource Fg}"/>
                    <TextBlock Text="{Binding SourceDisplay}" Margin="0,4,0,0" Foreground="{DynamicResource FgMuted}" FontSize="12"/>
                </StackPanel>
                <Button Grid.Column="1"
                        Content="Remove"
                        Padding="8,4"
                        Margin="12,0,0,0"
                        Command="{Binding DataContext.RemoveBookmarkCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                        CommandParameter="{Binding}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LocalLibraryFolderEntryViewModel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Background="{DynamicResource SurfaceElevated}"
                        Padding="8,4"
                        CornerRadius="6"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource ExtensionLabelBorderStyle}">
                    <TextBlock Text="{Binding ExtensionLabel}" FontWeight="SemiBold" Foreground="{DynamicResource Fg}"/>
                </Border>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" Foreground="{DynamicResource FgSubtle}"/>
                    <TextBlock Text="{Binding Name}" Foreground="{DynamicResource Fg}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LocalLibraryChapterEntryViewModel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Background="{DynamicResource SurfaceElevated}"
                        Padding="8,4"
                        CornerRadius="6"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource ExtensionLabelBorderStyle}">
                    <TextBlock Text="{Binding ExtensionLabel}" FontWeight="SemiBold" Foreground="{DynamicResource Fg}"/>
                </Border>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" Foreground="{DynamicResource FgSubtle}"/>
                    <TextBlock Text="{Binding Name}" Foreground="{DynamicResource Fg}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ContinueReadingTemplate" DataType="{x:Type vm:ContinueReadingEntryViewModel}">
            <Border BorderBrush="{DynamicResource SurfaceBorderSoft}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Background="{DynamicResource Surface}"
                    Padding="12"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="{Binding MangaTitle}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Fg}"/>
                    <Button Grid.Row="0" Grid.Column="1"
                            Content="Remove"
                            Padding="8,4"
                            Command="{Binding RemoveCommand}"
                            CommandParameter="{Binding}"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                               Text="{Binding ChapterDisplay}"
                               Margin="0,6,0,0"
                               Foreground="{DynamicResource FgMuted}"/>
                    <ProgressBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                 Margin="0,8,0,0"
                                 Height="6"
                                 Value="{Binding ScrollPercentage, Mode=OneWay}"
                                 Maximum="100"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

        <Grid Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Local library preview -->
            <Border Grid.Column="0" Style="{StaticResource SectionContainerStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Location" Style="{StaticResource SectionTitleStyle}" DockPanel.Dock="Left"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                            <Button Content="Open"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Padding="10,4"
                                    Margin="0,0,8,0"
                                    Command="{Binding LocalLibrary.OpenLibraryFolderCommand}"
                                    IsEnabled="{Binding LocalLibrary.HasLibraryPath}"/>
                            <Button Content="Refresh"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Padding="10,4"
                                    Command="{Binding LocalLibrary.RefreshCommand}"/>
                        </StackPanel>
                    </DockPanel>

                    <DockPanel Grid.Row="1" Margin="0,0,0,12">
                        <TextBlock Text="{Binding LocalLibrary.CurrentFolderPath}"
                                   Foreground="{DynamicResource FgMuted}"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"/>
                        <Button Content="Up"
                                DockPanel.Dock="Right"
                                Padding="10,4"
                                Command="{Binding LocalLibrary.NavigateUpCommand}"
                                IsEnabled="{Binding LocalLibrary.CanNavigateUp}"
                                Margin="8,0,0,0"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </DockPanel>

                    <TextBox Grid.Row="2"
                             Style="{StaticResource InputTextBoxStyle}"
                             Text="{Binding LocalLibrary.SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Type to search"
                             Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{Binding LocalLibrary.PreviewEntries}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  VerticalAlignment="Stretch">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,0,0,10"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <EventSetter Event="MouseDoubleClick" Handler="OnLibraryItemDoubleClick"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </ScrollViewer>
            </Grid>
            </Border>

            <!-- Bookmarks preview -->
            <Border Grid.Column="2" Style="{StaticResource SectionContainerStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Bookmarks" Style="{StaticResource SectionTitleStyle}" Margin="0,0,0,12"/>

                    <TextBox Grid.Row="1"
                             Style="{StaticResource InputTextBoxStyle}"
                             Text="{Binding Bookmarks.SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Search bookmarks"
                             Margin="0,0,0,12"/>

                    <Grid Grid.Row="2">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Bookmarks.ShowEmptyState}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView ItemsSource="{Binding Bookmarks.Bookmarks}"
                                      SelectedItem="{Binding Bookmarks.SelectedBookmark, Mode=TwoWay}"
                                      ItemTemplate="{StaticResource BookmarkItemTemplate}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      VerticalAlignment="Stretch">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,0,0,10"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </ScrollViewer>
                </Grid>

                    <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Bookmarks.ShowEmptyState}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="No bookmarks" Foreground="{DynamicResource FgMuted}"/>
                        <TextBlock Text="Add some favorites to see them here." Foreground="{DynamicResource FgMuted}" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Continue Reading preview -->
            <Border Grid.Column="4" Style="{StaticResource SectionContainerStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Continue Reading" Style="{StaticResource SectionTitleStyle}" Margin="0,0,0,12"/>

                    <Grid Grid.Row="1">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ContinueReading.HasEntries}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView ItemsSource="{Binding ContinueReading.Entries}"
                                      ItemTemplate="{StaticResource ContinueReadingTemplate}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      VerticalAlignment="Stretch">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <EventSetter Event="PreviewMouseLeftButtonUp" Handler="OnContinueReadingClicked"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </ScrollViewer>
                </Grid>

                    <TextBlock Grid.Row="1"
                               Text="Start reading a chapter to see it here."
                               Foreground="{DynamicResource FgMuted}"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ContinueReading.HasEntries}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
</UserControl>