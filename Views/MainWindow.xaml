<Window x:Class="MSCS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MSCS.Views"
        xmlns:vm="clr-namespace:MSCS.ViewModels"
        Title="Manga Scraper"
        Height="720" Width="1180"
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Main tabs -->
            <Style x:Key="MainTabItemStyle" TargetType="ListBoxItem">
                <Setter Property="Padding" Value="18,10"/>
                <Setter Property="Margin" Value="0,0,12,0"/>
                <Setter Property="Foreground" Value="{DynamicResource FgMuted}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceAlt}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Fg}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceAlt}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Fg}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Foreground" Value="#445066"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <DataTemplate x:Key="MainTabTemplate" DataType="{x:Type vm:MainMenuTab}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding IconGlyph}"
                           FontFamily="Segoe MDL2 Assets"
                           Margin="0,0,6,0"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"/>
                    <TextBlock Text="{Binding Title}"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"/>
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <!-- ===== Layout ===== -->
    <Grid Background="{DynamicResource AppBackground}">
        <!-- soft vignette -->
        <Rectangle>
            <Rectangle.Fill>
                <RadialGradientBrush Center="0.25,0.1" RadiusX="1.2" RadiusY="1.2">
                    <GradientStop Color="#12FFFFFF" Offset="0"/>
                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- top bar -->
                <RowDefinition Height="16"/>
                <RowDefinition Height="*"/>
                <!-- content -->
            </Grid.RowDefinitions>
            <!-- Tab menu -->
            <Border Grid.Row="0"
                    Margin="0,12,0,0"
                    Background="{x:Null}">
                <ListBox ItemsSource="{Binding Tabs}"
                         SelectedItem="{Binding SelectedTab, Mode=TwoWay}"
                         ItemTemplate="{StaticResource MainTabTemplate}"
                         ItemContainerStyle="{StaticResource MainTabItemStyle}"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalAlignment="Center">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Border>

            <!-- Content host, centered, width not driven by content -->
            <Border Grid.Row="2"
                    Style="{DynamicResource CardStyle}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Padding="0"
                    Background="{x:Null}">
                <!-- MainWindow.xaml -->
                <Grid Background="{DynamicResource AppBackground}">
                    <ContentControl Content="{Binding CurrentViewModel}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  SnapsToDevicePixels="True"/>
                </Grid>

            </Border>
        </Grid>
    </Grid>
</Window>