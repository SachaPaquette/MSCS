<Window x:Class="MSCS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MSCS.Views"
        xmlns:vm="clr-namespace:MSCS.ViewModels"
        Title="Manga Scraper"
        Height="720" Width="1180"
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}">

    <!-- ===== Theme ===== -->
    <Window.Resources>
        <!-- Palette -->
        <LinearGradientBrush x:Key="AppBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0E1117" Offset="0"/>
            <GradientStop Color="#141A24" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="Surface"   Color="#1B2230"/>
        <SolidColorBrush x:Key="SurfaceAlt" Color="#222A3A"/>
        <SolidColorBrush x:Key="Card"      Color="#202737"/>
        <SolidColorBrush x:Key="Accent"    Color="#7C9CFF"/>
        <SolidColorBrush x:Key="Fg"        Color="#E9EEF7"/>
        <SolidColorBrush x:Key="FgMuted"   Color="#9AA5B1"/>

        <!-- Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.22"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon button (MDL2) -->
        <Style x:Key="IconBtn" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#2A3347"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#3A465F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- VM → View mapping -->
        <DataTemplate DataType="{x:Type vm:MangaListViewModel}">
            <views:MangaListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ChapterListViewModel}">
            <views:ChapterListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReaderViewModel}">
            <views:ReaderView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LocalLibraryViewModel}">
            <views:LocalLibraryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>

        <!-- Main tabs -->
        <Style x:Key="MainTabItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Foreground" Value="{StaticResource FgMuted}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#252E40"/>
                                <Setter Property="Foreground" Value="{StaticResource Fg}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource SurfaceAlt}"/>
                                <Setter Property="Foreground" Value="{StaticResource Fg}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#445066"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="MainTabTemplate" DataType="{x:Type vm:MainMenuTab}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{Binding IconGlyph}"
                           FontFamily="Segoe MDL2 Assets"
                           Margin="0,0,6,0"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"/>
                <TextBlock Text="{Binding Title}"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <!-- ===== Layout ===== -->
    <Grid Background="{StaticResource AppBackground}">
        <!-- soft vignette -->
        <Rectangle>
            <Rectangle.Fill>
                <RadialGradientBrush Center="0.25,0.1" RadiusX="1.2" RadiusY="1.2">
                    <GradientStop Color="#12FFFFFF" Offset="0"/>
                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- top bar -->
                <RowDefinition Height="16"/>
                <RowDefinition Height="*"/>
                <!-- content -->
            </Grid.RowDefinitions>
            <!-- Tab menu -->
            <Border Grid.Row="0"
                    Margin="0,12,0,0"
                    Background="{x:Null}">
                <ListBox ItemsSource="{Binding Tabs}"
                         SelectedItem="{Binding SelectedTab, Mode=TwoWay}"
                         ItemTemplate="{StaticResource MainTabTemplate}"
                         ItemContainerStyle="{StaticResource MainTabItemStyle}"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalAlignment="Center">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Border>

            <!-- Content host, centered, width not driven by content -->
            <Border Grid.Row="2"
                    Style="{StaticResource CardStyle}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Padding="0"
                    Background="{x:Null}">
                <!-- MainWindow.xaml -->
                <Grid Background="{StaticResource AppBackground}">
                    <ContentControl Content="{Binding CurrentViewModel}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  SnapsToDevicePixels="True"/>
                </Grid>

            </Border>
        </Grid>
    </Grid>
</Window>
