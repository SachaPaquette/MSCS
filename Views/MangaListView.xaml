<UserControl x:Class="MSCS.Views.MangaListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MSCS.Models"
             Height="Auto" Width="Auto">

    <DockPanel Margin="0,0,0,0">
        <!-- Search Bar -->
        <DockPanel DockPanel.Dock="Top" LastChildFill="False" Margin="0,0,0,12" HorizontalAlignment="Center">
            <Border Background="#202737" CornerRadius="10" Padding="12" SnapsToDevicePixels="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <!-- source combo -->
                        <ColumnDefinition Width="12"/>
                        <!-- gap -->
                        <ColumnDefinition Width="*"/>
                        <!-- query box -->
                        <ColumnDefinition Width="12"/>
                        <!-- gap -->
                        <ColumnDefinition Width="140"/>
                        <!-- button -->
                    </Grid.ColumnDefinitions>

                    <!-- shared look for inputs -->
                    <Grid.Resources>
                        <Style x:Key="InputBase" TargetType="Control">
                            <Setter Property="Height" Value="34"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </Grid.Resources>

                    <ComboBox x:Name="SourceSelector"
                Grid.Column="0"
                Style="{StaticResource InputBase}">
                        <ComboBoxItem Content="mangaread"/>
                        <ComboBoxItem Content="mangadex"/>
                    </ComboBox>

                    <TextBox x:Name="QueryBox"
               Grid.Column="2"
               Style="{StaticResource InputBase}"
               Padding="10,0"
               MinWidth="200"
               Text="" />

                    <Button Grid.Column="4"
              Content="Search Manga"
              Style="{StaticResource InputBase}"
              Padding="16,0"
              Click="Search_Click"/>
                </Grid>
            </Border>
        </DockPanel>
        <!-- Manga Results List -->
        <ListView x:Name="ResultList"
          BorderThickness="0"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          Background="Transparent"
          ItemsSource="{Binding MangaResults}"
          SelectedItem="{Binding SelectedManga, Mode=TwoWay}"
          SelectionChanged="ResultList_SelectionChanged">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type local:Manga}">
                    <Border Margin="8"
                            Padding="8"
                            CornerRadius="8"
                            Background="#FFF"
                            BorderBrush="#DDD"
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"
                                   Width="80"
                                   Height="110"
                                   Margin="0,0,10,0"
                                   Source="{Binding CoverImageUrl}"
                                   Stretch="UniformToFill"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}"
                                           FontWeight="SemiBold"
                                           FontSize="15"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Url}"
                                           FontSize="12"
                                           Foreground="#666"
                                           TextWrapping="Wrap"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</UserControl>
