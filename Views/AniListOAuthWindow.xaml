<Window x:Class="MSCS.Views.AniListOAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Link AniList"
        Height="360"
        Width="480"
        WindowStartupLocation="CenterOwner"
        Background="#0F151F">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Link AniList"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="White" />

        <TextBlock Grid.Row="1"
                   Margin="0,12,0,0"
                   TextWrapping="Wrap"
                   Foreground="#D0D7E3">
            <Run Text="Click &quot;Proceed&quot; to start the AniList authorization process. A browser window will open with a token once you approve access." />
            <LineBreak />
            <Run Text="Copy the token from that page and paste it below to complete linking." />
        </TextBlock>

        <Button Grid.Row="2"
                Margin="0,20,0,0"
                Height="36"
                Width="140"
                HorizontalAlignment="Left"
                Content="Proceed"
                Foreground="White"
                Background="#1F5AA8"
                BorderBrush="#2C6CC7"
                Click="ProceedButton_OnClick" />

        <TextBlock Grid.Row="3"
                   Margin="0,24,0,8"
                   Foreground="#D0D7E3"
                   Text="Paste your token here:" />

        <StackPanel Grid.Row="4">
            <TextBox x:Name="TokenTextBox"
                     Height="32"
                     Background="#1A2333"
                     Foreground="White"
                     BorderBrush="#263149"
                     Padding="6"
                     KeyDown="TokenTextBox_OnKeyDown" />
            <Button Margin="0,16,0,0"
                    Height="32"
                    Content="Submit"
                    Foreground="White"
                    Background="#1F5AA8"
                    BorderBrush="#2C6CC7"
                    Click="SubmitButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>