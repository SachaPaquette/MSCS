<UserControl x:Class="MSCS.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:settings="clr-namespace:MSCS.Views.Settings"
             Background="Transparent">
    <UserControl.Resources>
        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1C2434"/>
            <Setter Property="BorderBrush" Value="#2B3448"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="#7C9CFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#91ACFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#6987F7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="36">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="Settings"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,18"/>

                <settings:SettingsSection Title="Local library folder"
                                          Description="Choose the folder that contains your downloaded manga collection.">
                    <StackPanel>
                        <TextBox Text="{Binding LibraryPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource SettingsTextBox}"
                                 Margin="0,0,0,12"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Browse"
                                    Padding="20,8"
                                    Style="{StaticResource AccentButton}"
                                    Command="{Binding BrowseCommand}"/>
                            <Button Content="Clear"
                                    Padding="20,8"
                                    Style="{StaticResource AccentButton}"
                                    Command="{Binding ClearCommand}"
                                    Margin="10,0,0,0"/>
                        </StackPanel>

                        <Border Background="#111722"
                                BorderBrush="#273145"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="Current status"
                                           Foreground="#A9B4C7"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                                <TextBlock FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#F08A7E"/>
                                            <Setter Property="Text" Value="No folder selected."/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LibraryPathExists}" Value="True">
                                                    <Setter Property="Foreground" Value="#7BD88F"/>
                                                    <Setter Property="Text" Value="Library folder is ready."/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </settings:SettingsSection>

                <settings:SettingsSection Title="AniList integration"
                                          Description="Connect your AniList account to track chapters and update your reading list."
                                          Margin="0,20,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Connect AniList"
                                    Padding="20,8"
                                    Style="{StaticResource AccentButton}"
                                    Command="{Binding AniListAuthenticateCommand}"/>
                        </StackPanel>

                        <Border Background="#111722"
                                BorderBrush="#273145"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="Connection status"
                                           Foreground="#A9B4C7"
                                           FontSize="12"/>
                                <TextBlock Text="{Binding AniListStatusText}"
                                           FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#F08A7E"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAniListConnected}" Value="True">
                                                    <Setter Property="Foreground" Value="#7BD88F"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </settings:SettingsSection>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
