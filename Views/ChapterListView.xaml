<UserControl x:Class="MSCS.Views.ChapterListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MSCS.Models"
             xmlns:converters="clr-namespace:MSCS.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Height="Auto" Width="Auto">

    <UserControl.Resources>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#E5E7EB"/>
        <Style x:Key="MetadataTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource SurfaceBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header / Hero -->
        <Border Grid.Row="0"
                Margin="16"
                CornerRadius="16"
                Padding="24"
                Background="White"
                BorderBrush="{StaticResource CardBorderBrush}"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="18" Opacity="0.08"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        MinWidth="96"
                        Height="32"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Padding="12,4"
                        Background="#111827"
                        Foreground="White"
                        BorderBrush="#111827"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Command="{Binding BackCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Text="Back"/>
                    </StackPanel>
                </Button>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="{Binding Manga.Title}"
                               Foreground="#111827"
                               FontSize="24"
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>

                    <TextBlock Text="{Binding Manga.AlternativeTitles, Converter={StaticResource ListToStringConverter}}"
                               Foreground="#6B7280"
                               FontSize="12"
                               Margin="0,6,0,0"
                               TextWrapping="Wrap"
                               TextTrimming="CharacterEllipsis"/>

                    <StackPanel>
                        <TextBlock Text="{Binding Manga.TotalChapters, StringFormat=Total chapters\: {0}}"
                                   Margin="0,14,0,6">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MetadataTextStyle}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Manga.TotalChapters}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="{Binding Manga.LastUpdated, StringFormat=Last updated\: {0:d}}"
                                   Margin="0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MetadataTextStyle}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Manga.LastUpdated}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Chapters list -->
        <Border Grid.Row="1"
                Margin="16"
                Padding="20"
                Background="White"
                CornerRadius="18"
                BorderBrush="{StaticResource CardBorderBrush}"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="25" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Chapters"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#111827"/>
                    <TextBlock Text="Pick a chapter to start reading"
                               FontSize="12"
                               Foreground="#6B7280"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <ListView x:Name="ChaptersList"
                          Grid.Row="1"
                          Margin="0,16,0,0"
                          ItemsSource="{Binding Chapters}"
                          SelectedItem="{Binding SelectedChapter, Mode=TwoWay}"
                          BorderThickness="0"
                          Background="Transparent"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <!-- Double-click to open -->
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction
                                Command="{Binding OpenChapterCommand}"
                                CommandParameter="{Binding SelectedItem, ElementName=ChaptersList}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <!-- Item template -->
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:Chapter}">
                            <Border Padding="14"
                                    Margin="0,4"
                                    CornerRadius="12"
                                    Background="White"
                                    BorderBrush="{StaticResource CardBorderBrush}"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="42"
                                            Height="42"
                                            CornerRadius="12"
                                            Background="#F3F4F6"
                                            BorderBrush="{StaticResource CardBorderBrush}"
                                            BorderThickness="1"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Number, StringFormat=\{0:0.##\}}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#111827"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#1F2937"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="Double click to open"
                                                   FontSize="11"
                                                   Foreground="#9CA3AF"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <!-- Row look & feel -->
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.08"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.12" Color="#111827"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>