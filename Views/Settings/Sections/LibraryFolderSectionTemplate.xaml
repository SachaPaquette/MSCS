<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:settings="clr-namespace:MSCS.Views.Settings"
                    xmlns:viewModels="clr-namespace:MSCS.ViewModels.Settings">
    <DataTemplate DataType="{x:Type viewModels:LibraryFolderSettingsSectionViewModel}">
        <settings:SettingsSection Title="{Binding Title}"
                                  Description="{Binding Description}">
            <StackPanel>
                <TextBox Text="{Binding LibraryPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{DynamicResource SettingsTextBox}"
                         Margin="{DynamicResource SettingsControlMargin}"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Browse"
                            Style="{DynamicResource AccentButton}"
                            Command="{Binding BrowseCommand}"/>
                    <Button Content="Clear"
                            Style="{DynamicResource AccentButton}"
                            Command="{Binding ClearCommand}"
                            Margin="{DynamicResource SettingsInlineValueMargin}"/>
                </StackPanel>

                <Border Background="{DynamicResource Surface}"
                        BorderBrush="{DynamicResource SurfaceAlt}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="{DynamicResource SettingsSectionSpacing}">
                    <StackPanel>
                        <TextBlock Text="Current status"
                                   Foreground="{DynamicResource FgMuted}"
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                        <TextBlock FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#F08A7E"/>
                                    <Setter Property="Text" Value="No folder selected."/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LibraryPathExists}" Value="True">
                                            <Setter Property="Foreground" Value="#7BD88F"/>
                                            <Setter Property="Text" Value="Library folder is ready."/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </settings:SettingsSection>
    </DataTemplate>
</ResourceDictionary>