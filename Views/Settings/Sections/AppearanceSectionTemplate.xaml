<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:settings="clr-namespace:MSCS.Views.Settings"
                    xmlns:viewModels="clr-namespace:MSCS.ViewModels.Settings">
    <DataTemplate DataType="{x:Type viewModels:AppearanceSettingsSectionViewModel}">
        <settings:SettingsSection Title="{Binding Title}"
                                  Description="{Binding Description}">
            <StackPanel>
                <ComboBox ItemsSource="{Binding ThemeOptions}"
                          SelectedValuePath="Value"
                          SelectedValue="{Binding SelectedTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          DisplayMemberPath="DisplayName"
                          HorizontalAlignment="Left"
                          MaxWidth="{DynamicResource ControlMaxWidth}"
                          Margin="{DynamicResource SettingsControlMargin}"/>
                <TextBlock Text="Changes apply immediately."
                           Style="{DynamicResource SettingsHelperTextStyle}"/>
            </StackPanel>
        </settings:SettingsSection>
    </DataTemplate>
</ResourceDictionary>