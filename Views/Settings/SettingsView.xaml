<UserControl x:Class="MSCS.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:settings="clr-namespace:MSCS.Views.Settings"
             xmlns:viewModels="clr-namespace:MSCS.ViewModels.Settings"
             Background="Transparent">
    <UserControl.Resources>
        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Foreground" Value="{DynamicResource Fg}"/>
            <Setter Property="Background" Value="{DynamicResource Surface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceAlt}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Accent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource AccentHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource AccentPressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate DataType="{x:Type viewModels:AppearanceSettingsSectionViewModel}">
            <settings:SettingsSection Title="{Binding Title}"
                                      Description="{Binding Description}">
                <StackPanel>
                    <ComboBox ItemsSource="{Binding ThemeOptions}"
                              SelectedValuePath="Value"
                              SelectedValue="{Binding SelectedTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              DisplayMemberPath="DisplayName"
                              Width="220"
                              HorizontalAlignment="Left"/>
                    <TextBlock Text="Changes apply immediately."
                               Margin="0,8,0,0"
                               Foreground="{DynamicResource FgMuted}"/>
                </StackPanel>
            </settings:SettingsSection>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:ReaderDefaultsSettingsSectionViewModel}">
            <settings:SettingsSection Title="{Binding Title}"
                                      Description="{Binding Description}">
                <StackPanel>
                    <TextBlock Text="Color theme"
                               Foreground="{DynamicResource FgMuted}"/>
                    <ComboBox ItemsSource="{Binding ReaderThemeOptions}"
                              SelectedValuePath="Value"
                              DisplayMemberPath="DisplayName"
                              SelectedValue="{Binding SelectedReaderTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Width="220"
                              HorizontalAlignment="Left"
                              Margin="0,4,0,12"/>

                    <TextBlock Text="Page zoom"
                               Foreground="{DynamicResource FgMuted}"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,4,0,12">
                        <Slider Width="220"
                                Minimum="0.3"
                                Maximum="1.0"
                                TickFrequency="0.05"
                                IsSnapToTickEnabled="True"
                                Value="{Binding ReaderWidthFactor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="Adjust how wide pages appear by default"/>
                        <TextBlock Text="{Binding ReaderZoomPercent, StringFormat={}{0:F0}%}"
                                   Margin="12,0,0,0"
                                   Foreground="{DynamicResource Fg}"/>
                    </StackPanel>

                    <TextBlock Text="Maximum page width"
                               Foreground="{DynamicResource FgMuted}"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,4,0,12">
                        <Slider Width="220"
                                Minimum="600"
                                Maximum="1600"
                                TickFrequency="50"
                                IsSnapToTickEnabled="True"
                                Value="{Binding ReaderMaxPageWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="Limit how wide large pages can grow"/>
                        <TextBlock Text="{Binding ReaderMaxPageWidth, StringFormat={}{0:F0}px}"
                                   Margin="12,0,0,0"
                                   Foreground="{DynamicResource Fg}"/>
                    </StackPanel>

                    <TextBlock Text="Scroll amount per step"
                               Foreground="{DynamicResource FgMuted}"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,4,0,12">
                        <Slider Width="220"
                                Minimum="0.5"
                                Maximum="1.2"
                                TickFrequency="0.05"
                                IsSnapToTickEnabled="True"
                                Value="{Binding ReaderScrollPageFraction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="Choose how much of a page smooth scrolling covers"/>
                        <TextBlock Text="{Binding ReaderScrollPercent, StringFormat={}{0:F0}%}"
                                   Margin="12,0,0,0"
                                   Foreground="{DynamicResource Fg}"/>
                    </StackPanel>

                    <TextBlock Text="Scroll animation duration"
                               Foreground="{DynamicResource FgMuted}"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,4,0,12">
                        <Slider Width="220"
                                Minimum="100"
                                Maximum="500"
                                TickFrequency="10"
                                IsSnapToTickEnabled="True"
                                Value="{Binding ReaderScrollDurationMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="Control how fast smooth scrolling animations play"/>
                        <TextBlock Text="{Binding ReaderScrollDurationMs, StringFormat={}{0} ms}"
                                   Margin="12,0,0,0"
                                   Foreground="{DynamicResource Fg}"/>
                    </StackPanel>

                    <TextBlock Text="Layout defaults"
                               Foreground="{DynamicResource FgMuted}"/>
                    <StackPanel Orientation="Vertical" Margin="0,4,0,12">
                        <CheckBox Content="Auto-adjust page width" IsChecked="{Binding ReaderAutoAdjustWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4"/>
                        <CheckBox Content="Enable page transitions" IsChecked="{Binding ReaderEnablePageTransitions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    
                    <Button Content="Reset to defaults"
                            Padding="20,8"
                            Width="160"
                            HorizontalAlignment="Left"
                            Style="{StaticResource AccentButton}"
                            Command="{Binding ResetReaderDefaultsCommand}"/>
                </StackPanel>
            </settings:SettingsSection>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:LibraryFolderSettingsSectionViewModel}">
            <settings:SettingsSection Title="{Binding Title}"
                                      Description="{Binding Description}">
                <StackPanel>
                    <TextBox Text="{Binding LibraryPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SettingsTextBox}"
                             Margin="0,0,0,12"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Browse"
                                Padding="20,8"
                                Style="{StaticResource AccentButton}"
                                Command="{Binding BrowseCommand}"/>
                        <Button Content="Clear"
                                Padding="20,8"
                                Style="{StaticResource AccentButton}"
                                Command="{Binding ClearCommand}"
                                Margin="10,0,0,0"/>
                    </StackPanel>

                    <Border Background="{DynamicResource Surface}"
                            BorderBrush="{DynamicResource SurfaceAlt}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,12,0,0">
                        <StackPanel>
                            <TextBlock Text="Current status"
                                       Foreground="{DynamicResource FgMuted}"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                            <TextBlock FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#F08A7E"/>
                                        <Setter Property="Text" Value="No folder selected."/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LibraryPathExists}" Value="True">
                                                <Setter Property="Foreground" Value="#7BD88F"/>
                                                <Setter Property="Text" Value="Library folder is ready."/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </settings:SettingsSection>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:TrackingIntegrationsSettingsSectionViewModel}">
            <settings:SettingsSection Title="{Binding Title}"
                                      Description="{Binding Description}">
                <ItemsControl ItemsSource="{Binding TrackingProviders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource Surface}"
                                    BorderBrush="{DynamicResource SurfaceAlt}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource Fg}"/>
                                        <TextBlock Text="{Binding StatusText}"
                                                   Margin="0,6,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#F08A7E"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                            <Setter Property="Foreground" Value="#7BD88F"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="1"
                                                VerticalAlignment="Center">
                                        <Button Content="Connect"
                                                Padding="20,8"
                                                Command="{Binding ConnectCommand}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource AccentButton}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Content="Disconnect"
                                                Padding="20,8"
                                                Margin="12,0,0,0"
                                                Command="{Binding DisconnectCommand}"
                                                Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Style="{StaticResource AccentButton}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </settings:SettingsSection>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Margin="36">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="Settings"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource Fg}"
                           Margin="0,0,0,18"/>

                <ItemsControl ItemsSource="{Binding Sections}">
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="0,0,0,20"/>
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsVisible}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>