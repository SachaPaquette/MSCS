<UserControl x:Class="MSCS.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:settings="clr-namespace:MSCS.Views.Settings"
             xmlns:viewModels="clr-namespace:MSCS.ViewModels.Settings"
             Background="Transparent">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <sys:Double x:Key="ControlMaxWidth">520</sys:Double>

        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Foreground" Value="{DynamicResource Fg}"/>
            <Setter Property="Background" Value="{DynamicResource Surface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceAlt}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Accent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="MinWidth" Value="96"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource AccentHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource AccentPressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ThinSlider" TargetType="Slider">
            <Setter Property="Height" Value="22"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TickPlacement" Value="None"/>
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="{StaticResource ControlMaxWidth}"/>
        </Style>

        <Thickness x:Key="SettingsSectionSpacing">0,16,0,4</Thickness>
        <Thickness x:Key="SettingsControlMargin">0,0,0,12</Thickness>
        <Thickness x:Key="SettingsInlineValueMargin">12,0,0,0</Thickness>
        <Thickness x:Key="SettingsSmallSpacing">0,0,0,8</Thickness>
        <Thickness x:Key="SettingsSmallTopSpacing">0,8,0,0</Thickness>
        <Thickness x:Key="SettingsMiniSpacing">0,0,0,4</Thickness>

        <Style x:Key="SettingsLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource FgMuted}"/>
            <Setter Property="Margin" Value="{StaticResource SettingsSectionSpacing}"/>
        </Style>

        <Style x:Key="SettingsHelperTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource FgMuted}"/>
            <Setter Property="Margin" Value="{StaticResource SettingsSmallTopSpacing}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <DataTemplate DataType="{x:Type viewModels:AppearanceSettingsSectionViewModel}">
            <settings:SettingsSection Title="{Binding Title}"
                                      Description="{Binding Description}">
                <StackPanel>
                    <ComboBox ItemsSource="{Binding ThemeOptions}"
                              SelectedValuePath="Value"
                              SelectedValue="{Binding SelectedTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              DisplayMemberPath="DisplayName"
                              HorizontalAlignment="Left"
                              MaxWidth="{StaticResource ControlMaxWidth}"
                              Margin="{StaticResource SettingsControlMargin}"/>
                    <TextBlock Text="Changes apply immediately."
                               Style="{StaticResource SettingsHelperTextStyle}"/>
                </StackPanel>
            </settings:SettingsSection>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:ReaderDefaultsSettingsSectionViewModel}">
            <settings:SettingsSection Title="{Binding Title}"
                                      Description="{Binding Description}">
                <StackPanel>
                    <TextBlock Text="Color theme"
                               Style="{StaticResource SettingsLabelStyle}"
                               Margin="{StaticResource SettingsMiniSpacing}"/>
                    <ComboBox ItemsSource="{Binding ReaderThemeOptions}"
                              SelectedValuePath="Value"
                              DisplayMemberPath="DisplayName"
                              SelectedValue="{Binding SelectedReaderTheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              HorizontalAlignment="Left"
                              MaxWidth="{StaticResource ControlMaxWidth}"
                              Margin="{StaticResource SettingsControlMargin}"/>

                    <TextBlock Text="Page zoom"
                               Style="{StaticResource SettingsLabelStyle}"/>
                    <Grid Margin="{StaticResource SettingsControlMargin}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0"
                                Style="{StaticResource ThinSlider}"
                                Minimum="0.3"
                                Maximum="2.0"
                                TickFrequency="0.05"
                                Value="{Binding ReaderWidthFactor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding ReaderZoomPercent, StringFormat={}{0:F0}%}"
                                   Margin="{StaticResource SettingsInlineValueMargin}"
                                   Foreground="{DynamicResource Fg}"/>
                    </Grid>

                    <TextBlock Text="Maximum page width"
                               Style="{StaticResource SettingsLabelStyle}"/>
                    <Grid Margin="{StaticResource SettingsControlMargin}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0"
                                Style="{StaticResource ThinSlider}"
                                Minimum="600"
                                Maximum="3200"
                                TickFrequency="50"
                                Value="{Binding ReaderMaxPageWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding ReaderMaxPageWidth, StringFormat={}{0:F0}px}"
                                   Margin="{StaticResource SettingsInlineValueMargin}"
                                   Foreground="{DynamicResource Fg}"/>
                    </Grid>

                    <TextBlock Text="Scroll amount per step"
                               Style="{StaticResource SettingsLabelStyle}"/>
                    <Grid Margin="{StaticResource SettingsControlMargin}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0"
                                Style="{StaticResource ThinSlider}"
                                Minimum="0.5"
                                Maximum="1.2"
                                TickFrequency="0.05"
                                Value="{Binding ReaderScrollPageFraction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding ReaderScrollPercent, StringFormat={}{0:F0}%}"
                                   Margin="{StaticResource SettingsInlineValueMargin}"
                                   Foreground="{DynamicResource Fg}"/>
                    </Grid>

                    <TextBlock Text="Scroll animation duration"
                               Style="{StaticResource SettingsLabelStyle}"/>
                    <Grid Margin="{StaticResource SettingsControlMargin}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0"
                                Style="{StaticResource ThinSlider}"
                                Minimum="100"
                                Maximum="500"
                                TickFrequency="10"
                                Value="{Binding ReaderScrollDurationMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding ReaderScrollDurationMs, StringFormat={}{0} ms}"
                                   Margin="{StaticResource SettingsInlineValueMargin}"
                                   Foreground="{DynamicResource Fg}"/>
                    </Grid>

                    <TextBlock Text="Layout defaults"
                               Style="{StaticResource SettingsLabelStyle}"/>
                    <StackPanel Orientation="Vertical"
                                Margin="{StaticResource SettingsControlMargin}">
                        <CheckBox Content="Auto-adjust page width"
                                  IsChecked="{Binding ReaderAutoAdjustWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="{StaticResource SettingsSmallSpacing}"/>
                        <CheckBox Content="Enable page transitions"
                                  IsChecked="{Binding ReaderEnablePageTransitions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <Button Content="Reset to defaults"
                            Style="{StaticResource AccentButton}"
                            Command="{Binding ResetReaderDefaultsCommand}"/>
                </StackPanel>
            </settings:SettingsSection>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:LibraryFolderSettingsSectionViewModel}">
            <settings:SettingsSection Title="{Binding Title}"
                                      Description="{Binding Description}">
                <StackPanel>
                    <TextBox Text="{Binding LibraryPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SettingsTextBox}"
                             Margin="{StaticResource SettingsControlMargin}"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Browse"
                                Style="{StaticResource AccentButton}"
                                Command="{Binding BrowseCommand}"/>
                        <Button Content="Clear"
                                Style="{StaticResource AccentButton}"
                                Command="{Binding ClearCommand}"
                                Margin="{StaticResource SettingsInlineValueMargin}"/>
                    </StackPanel>

                    <Border Background="{DynamicResource Surface}"
                            BorderBrush="{DynamicResource SurfaceAlt}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="{StaticResource SettingsSectionSpacing}">
                        <StackPanel>
                            <TextBlock Text="Current status"
                                       Foreground="{DynamicResource FgMuted}"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                            <TextBlock FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#F08A7E"/>
                                        <Setter Property="Text" Value="No folder selected."/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LibraryPathExists}" Value="True">
                                                <Setter Property="Foreground" Value="#7BD88F"/>
                                                <Setter Property="Text" Value="Library folder is ready."/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </settings:SettingsSection>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:TrackingIntegrationsSettingsSectionViewModel}">
            <settings:SettingsSection Title="{Binding Title}"
                                      Description="{Binding Description}">
                <ItemsControl ItemsSource="{Binding TrackingProviders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource Surface}"
                                    BorderBrush="{DynamicResource SurfaceAlt}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="{StaticResource SettingsControlMargin}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource Fg}"/>
                                        <TextBlock Text="{Binding StatusText}"
                                                   Margin="{StaticResource SettingsSmallTopSpacing}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#F08A7E"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                            <Setter Property="Foreground" Value="#7BD88F"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="1"
                                                VerticalAlignment="Center">
                                        <Button Content="Connect"
                                                Command="{Binding ConnectCommand}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource AccentButton}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Content="Disconnect"
                                                Margin="{StaticResource SettingsInlineValueMargin}"
                                                Command="{Binding DisconnectCommand}"
                                                Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Style="{StaticResource AccentButton}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </settings:SettingsSection>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:UpdateSettingsSectionViewModel}">
            <settings:SettingsSection Title="{Binding Title}"
                                      Description="{Binding Description}">
                <StackPanel>
                    <TextBlock Text="{Binding InstalledVersionDisplay}"
                               Style="{StaticResource SettingsHelperTextStyle}"/>

                    <Button Content="Check for updates"
                            Margin="{StaticResource SettingsSectionSpacing}"
                            Style="{StaticResource AccentButton}"
                            Command="{Binding CheckForUpdatesCommand}"/>

                    <TextBlock Text="{Binding StatusMessage}"
                               Margin="{StaticResource SettingsSectionSpacing}"
                               Foreground="{DynamicResource Fg}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding StatusMessage}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Text="{Binding LastCheckedDisplay}"
                               Margin="{StaticResource SettingsSmallTopSpacing}"
                               Foreground="{DynamicResource FgMuted}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding LastCheckedDisplay}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </settings:SettingsSection>
        </DataTemplate>

    </UserControl.Resources>

    <Grid Margin="36">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Width="920">
                    <TextBlock Text="Settings"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Fg}"
                               Margin="0,0,0,18"/>

                    <ItemsControl ItemsSource="{Binding Sections}"
                                  HorizontalContentAlignment="Left">
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Margin" Value="0,0,0,20"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsVisible}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
