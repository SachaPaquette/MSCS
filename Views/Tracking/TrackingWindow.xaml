<Window x:Class="MSCS.Views.TrackingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MSCS.ViewModels"
        xmlns:views="clr-namespace:MSCS.Views"
        Height="640"
        Width="420"
        Background="#0F151F"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:AniListTrackingViewModel}">
            <views:AniListTrackingView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MyAnimeListTrackingViewModel}">
            <views:MyAnimeListTrackingView />
        </DataTemplate>
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#0F151F" />
            <Setter Property="Foreground" Value="#E9EEF7" />
            <Setter Property="BorderBrush" Value="#273145" />
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#E9EEF7" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Background" Value="#121B29" />
            <Setter Property="BorderBrush" Value="#273145" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#1A2230" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border Margin="12" Background="#121B29" BorderBrush="#273145" BorderThickness="1" CornerRadius="10">
        <TabControl ItemsSource="{Binding Providers}"
                    SelectedItem="{Binding SelectedProvider}"
                    Margin="-1">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}"
                               Foreground="#F7FAFF"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Opacity="1" />
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </Border>
</Window>