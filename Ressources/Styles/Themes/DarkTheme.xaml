<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Consolidated dark theme palette -->
    <LinearGradientBrush x:Key="AppBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#121A2A" Offset="0"/>
        <GradientStop Color="#0E1521" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="SidebarBackground" Color="#1A2640"/>
    <SolidColorBrush x:Key="SidebarText" Color="#E6ECF8"/>

    <SolidColorBrush x:Key="SurfaceLow" Color="#101825"/>
    <SolidColorBrush x:Key="Surface"    Color="#151F2F"/>
    <SolidColorBrush x:Key="SurfaceAlt" Color="#1C2639"/>
    <SolidColorBrush x:Key="SurfaceBorder" Color="#273247"/>
    <SolidColorBrush x:Key="SurfaceBorderSoft" Color="#1F293D"/>

    <SolidColorBrush x:Key="Accent"         Color="#7C9CFF"/>
    <SolidColorBrush x:Key="AccentHover"    Color="#91ACFF"/>
    <SolidColorBrush x:Key="AccentPressed"  Color="#6987F7"/>
    <SolidColorBrush x:Key="AccentForeground" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="Fg"        Color="#E6ECF8"/>
    <SolidColorBrush x:Key="FgMuted"   Color="#AAB4C6"/>
    <SolidColorBrush x:Key="FgSubtle"  Color="#7F8BA3"/>

    <SolidColorBrush x:Key="ControlHover"   Color="#222C40"/>
    <SolidColorBrush x:Key="ControlPressed" Color="#2B354C"/>
</ResourceDictionary>