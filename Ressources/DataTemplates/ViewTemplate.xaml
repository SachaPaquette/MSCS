<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:MSCS.ViewModels"
                    xmlns:views="clr-namespace:MSCS.Views">
    <DataTemplate DataType="{x:Type vm:MangaListViewModel}">
        <views:MangaListView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ChapterListViewModel}">
        <views:ChapterListView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ReaderViewModel}">
        <views:ReaderView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:LocalLibraryViewModel}">
        <views:LocalLibraryView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:BookmarkLibraryViewModel}">
        <views:BookmarkLibraryView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ContinueReadingViewModel}">
        <views:ContinueReadingView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:AniListCollectionViewModel}">
        <views:AniListCollectionView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:AniListRecommendationsViewModel}">
        <views:AniListRecommendationsView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
        <views:SettingsView />
    </DataTemplate>
</ResourceDictionary>