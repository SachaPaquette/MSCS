<Application x:Class="MSCS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:MSCS.Converters"
             StartupUri="Views/Shell/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Ressources/Styles/Themes/DarkTheme.xaml"/>
                <ResourceDictionary Source="/Ressources/Styles/Controls.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Ressources/DataTemplates/ViewTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:ListToStringConverter x:Key="ListToStringConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>