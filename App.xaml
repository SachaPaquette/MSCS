<Application x:Class="MSCS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MSCS.ViewModels"

             xmlns:views="clr-namespace:MSCS.Views"
             xmlns:converters="clr-namespace:MSCS.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type vm:MangaListViewModel}">
            <views:MangaListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ChapterListViewModel}">
            <views:ChapterListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReaderViewModel}">
            <views:ReaderView />
        </DataTemplate>
        <converters:ListToStringConverter x:Key="ListToStringConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2B2D42"/>
        <SolidColorBrush x:Key="AccentColor" Color="#EF8354"/>
        <SolidColorBrush x:Key="SidebarBackground" Color="#1C1C2E"/>
        <SolidColorBrush x:Key="SidebarText" Color="White"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="White"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="White"/>

        <!-- Nav Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SidebarText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderBrush" Value="#2C2C3E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2E2E3D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hamburger Button Style -->
        <Style x:Key="HamburgerStyle" TargetType="ToggleButton">
            <Setter Property="Content" Value="☰"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Application.Resources>
</Application>